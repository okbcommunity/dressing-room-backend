// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Models
// ============================================================================

model Bear {
  id         String          @id @default(uuid())
  number     Int             @unique
  public_key String?         @unique
  attributes Bear_Attribut[]
}

// https://www.prisma.io/docs/concepts/components/prisma-schema/relations/many-to-many-relations
model Bear_Attribut {
  bear        Bear     @relation(fields: [bear_id], references: [id])
  bear_id     String
  attribut    Attribut @relation(fields: [attribut_id], references: [id])
  attribut_id String

  @@id([bear_id, attribut_id])
}

model Category {
  id         String     @id @default(uuid())
  name       String
  weight     Int
  attributes Attribut[]
}

model Attribut {
  id                     String          @id @default(uuid())
  name                   String
  category_id            String
  category               Category        @relation(fields: [category_id], references: [id])
  image_url_web          String
  image_url_png_2000x200 String
  image_url_png_512x512  String
  bears                  Bear_Attribut[]
}
